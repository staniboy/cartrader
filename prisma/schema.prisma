// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Listing {
  id          Int       @id @default(autoincrement())
  userId      String
  seats       Int
  miles       Int
  price       Int
  images       String[]
  features    String[]
  description String
  city        String
  model       String
  make        String
  year        Int
  messages    Message[]
}

model Message {
  id        Int    @id @default(autoincrement())
  listingId Int
  name      String
  email     String
  phone     String
  message   String

  Listing Listing @relation(fields: [listingId], references: [id], onDelete: Cascade)
}
